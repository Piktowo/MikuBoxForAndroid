<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <include
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/layout_appbar" />
    <LinearLayout
        android:background="?colorPrimary"
        android:paddingBottom="0.0dip"
        android:clipToPadding="false"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingStart="0.0dip"
        android:paddingEnd="0.0dip"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/banner_home"
            android:layout_width="wrap_content"
            android:layout_height="170.0dip"
            android:layout_marginBottom="16.0dip"
            android:layout_marginStart="16.0dip"
            android:layout_marginEnd="16.0dip"
            app:cardBackgroundColor="?colorCard"
            app:cardCornerRadius="28.0dip"
            app:cardElevation="0.0dip"
            app:strokeColor="?colorCard"
            app:strokeWidth="3.0dip">
            <com.neko.blur.BlurImageViewGlide
                android:id="@+id/img_banner_home_blur"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:src="@drawable/uwu_banner_home"
                android:scaleType="centerCrop"
                android:elevation="0.0dip" />
            <View
                android:background="@android:color/black"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:alpha="0.2" />
            <LinearLayout
                android:gravity="center_vertical"
                android:clipToPadding="false"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false">
                <RelativeLayout
                    android:padding="16.0dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0">
                    <com.neko.widget.ProfileBannerImageView
                        android:id="@+id/banner_profile"
                        android:layout_width="50.0dip"
                        android:layout_height="50.0dip"
                        android:layout_marginBottom="8.0dip"
                        app:siBorderColor="@android:color/white"
                        app:siBorderWidth="3.0dip" />
                    <com.neko.marquee.text.UserNameTextView
                        android:textAppearance="@style/TextAppearance.M3.Sys.Typescale.TitleMedium"
                        android:textSize="17.0sp"
                        android:textColor="@android:color/white"
                        android:ellipsize="marquee"
                        android:id="@+id/user_name"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:layout_below="@+id/banner_profile"
                        android:layout_alignStart="@+id/banner_profile" />
                    <com.neko.marquee.text.Greetings
                        android:textAppearance="@style/TextAppearance.M3.Sys.Typescale.TitleSmall"
                        android:textSize="14.0sp"
                        android:textColor="@android:color/white"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:layout_below="@+id/user_name"
                        android:layout_alignStart="@+id/user_name" />
                </RelativeLayout>
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="16.0dip"
                    app:cardBackgroundColor="#00000000"
                    app:cardCornerRadius="0.0dip"
                    app:cardElevation="0.0dip">
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="120.0dip"
                        android:layout_height="170.0dip"
                        android:layout_marginTop="18.0dip"
                        android:layout_marginEnd="18.0dip"
                        app:cardCornerRadius="14.0dip"
                        app:cardElevation="0.0dip">
                        <ImageView
                            android:gravity="center"
                            android:orientation="vertical"
                            android:id="@+id/img_banner_home"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:src="@drawable/uwu_banner_image"
                            android:scaleType="centerCrop"
                            android:elevation="0.0dip" />
                    </com.google.android.material.card.MaterialCardView>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
    <FrameLayout
        android:background="@drawable/uwu_background_collapse"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <com.google.android.material.card.MaterialCardView
            android:paddingTop="16.0dip"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="16.0dip"
            android:layout_marginBottom="16.0dip"
            android:layout_marginStart="16.0dip"
            android:layout_marginEnd="16.0dip"
            app:cardBackgroundColor="#00000000"
            app:cardCornerRadius="14.0dip"
            app:cardElevation="0.0dip">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="-16.0dip"
                android:layout_marginStart="-16.0dip"
                android:layout_marginEnd="-16.0dip">
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16.0dip"
                    android:layout_marginTop="16.0dip"
                    android:layout_marginRight="16.0dip"
                    android:layout_marginHorizontal="16.0dip"
                    app:cardBackgroundColor="?colorCard"
                    app:cardCornerRadius="14.0dip"
                    app:cardElevation="0.0dip"
                    app:strokeWidth="0.0dip">
                    <com.google.android.material.tabs.TabLayout
                        android:id="@+id/group_tab"
                        android:background="@android:color/transparent"
                        android:layout_width="fill_parent"
                        android:layout_height="64.0dip"
                        app:tabIndicator="@drawable/uwu_tabs_rounded_indicator"
                        app:tabIndicatorAnimationMode="elastic"
                        app:tabIndicatorColor="?colorPrimary"
                        app:tabIndicatorFullWidth="true"
                        app:tabIndicatorHeight="64.0dip"
                        app:tabMode="scrollable"
                        app:tabPaddingEnd="24.0dip"
                        app:tabPaddingStart="24.0dip"
                        app:tabRippleColor="@android:color/transparent"
                        app:tabSelectedTextAppearance="@style/TextAppearance.M3.Sys.Typescale.TitleMedium"
                        app:tabSelectedTextColor="?colorSurface"
                        app:tabTextAppearance="@style/TextAppearance.M3.Sys.Typescale.TitleMedium"
                        app:tabTextColor="?colorOnSurfaceVariant" />
                </com.google.android.material.card.MaterialCardView>
                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/group_pager"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </FrameLayout>
</LinearLayout>