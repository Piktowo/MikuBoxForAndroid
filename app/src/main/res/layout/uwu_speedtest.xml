<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:background="@drawable/uwu_background_bottom_sheet"
    android:paddingTop="0.0dip"
    android:paddingBottom="?attr/dialogPreferredPadding"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginStart="0.0dip"
        android:layout_marginEnd="0.0dip">
        <LinearLayout
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.card.MaterialCardView
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16.0dip"
                android:layout_marginBottom="8.0dip"
                android:layout_marginStart="16.0dip"
                android:layout_marginEnd="16.0dip"
                app:cardBackgroundColor="?attr/colorCard"
                app:cardCornerRadius="28.0dip"
                app:cardElevation="0.0dip">
                <com.github.anastr.speedviewlib.PointerSpeedometer
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:id="@+id/speedometer"
                    android:layout_width="180.0dip"
                    android:layout_height="180.0dip"
                    android:layout_marginTop="4.0dip"
                    app:sv_backgroundCircleColor="#00000000"
                    app:sv_centerCircleColor="?attr/colorPrimary"
                    app:sv_endDegree="405"
                    app:sv_indicatorColor="?attr/colorPrimary"
                    app:sv_indicatorLightColor="?attr/colorPrimary"
                    app:sv_markColor="?attr/colorPrimary"
                    app:sv_maxSpeed="100.0"
                    app:sv_pointerColor="?attr/colorPrimary"
                    app:sv_speedBackgroundColor="#00000000"
                    app:sv_speedTextColor="?android:textColorPrimary"
                    app:sv_speedTextSize="24.0sp"
                    app:sv_speedometerBackColor="?attr/colorPrimaryInverse"
                    app:sv_speedometerColor="?attr/colorPrimary"
                    app:sv_startDegree="135"
                    app:sv_textColor="?attr/colorOnSurface"
                    app:sv_unit="Mbps"
                    app:sv_unitTextColor="?attr/colorOnSurface"
                    app:sv_withTremble="false" />
            </com.google.android.material.card.MaterialCardView>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8.0dip"
                android:layout_marginBottom="8.0dip"
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginStart="16.0dip"
                    android:layout_marginEnd="16.0dip">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.0">
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="wrap_content"
                            android:layout_height="180.0dip"
                            android:layout_marginEnd="8.0dip"
                            app:cardBackgroundColor="?attr/colorCard"
                            app:cardCornerRadius="28.0dip"
                            app:cardElevation="0.0dip">
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent">
                                <LinearLayout
                                    android:background="@drawable/uwu_bg_icon"
                                    android:layout_width="45.0dip"
                                    android:layout_height="45.0dip"
                                    android:layout_marginTop="16.0dip"
                                    android:layout_marginStart="16.0dip"
                                    android:backgroundTint="?attr/colorPrimary">
                                    <ImageView
                                        android:gravity="center"
                                        android:layout_width="25.0dip"
                                        android:layout_height="25.0dip"
                                        android:layout_marginTop="10.0dip"
                                        android:src="@drawable/ic_download"
                                        android:tint="?attr/colorIcon"
                                        android:layout_marginStart="10.0dip" />
                                </LinearLayout>
                                <RelativeLayout
                                    android:gravity="center"
                                    android:layout_gravity="center"
                                    android:paddingTop="10.0dip"
                                    android:paddingBottom="10.0dip"
                                    android:layout_width="wrap_content"
                                    android:layout_height="fill_parent"
                                    android:layout_weight="1.0"
                                    android:layout_marginStart="16.0dip"
                                    android:layout_marginEnd="10.0dip">
                                    <LinearLayout
                                        android:orientation="vertical"
                                        android:layout_width="fill_parent"
                                        android:layout_height="wrap_content">
                                        <TextView
                                            android:textAppearance="@style/TextAppearance.M3.Sys.Typescale.TitleMedium"
                                            android:textSize="17.0sp"
                                            android:textColor="?attr/colorOnSurface"
                                            android:ellipsize="end"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Download"
                                            android:singleLine="false" />
                                        <TextView
                                            android:textAppearance="@style/TextAppearance.M3.Sys.Typescale.TitleSmall"
                                            android:textSize="14.0sp"
                                            android:textColor="?attr/colorOnSurfaceVariant"
                                            android:ellipsize="end"
                                            android:id="@+id/textDownload"
                                            android:paddingTop="0.0dip"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Mbps"
                                            android:singleLine="false" />
                                    </LinearLayout>
                                </RelativeLayout>
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.0">
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="wrap_content"
                            android:layout_height="180.0dip"
                            android:layout_marginStart="8.0dip"
                            app:cardBackgroundColor="?attr/colorCard"
                            app:cardCornerRadius="28.0dip"
                            app:cardElevation="0.0dip">
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent">
                                <LinearLayout
                                    android:background="@drawable/uwu_bg_icon"
                                    android:layout_width="45.0dip"
                                    android:layout_height="45.0dip"
                                    android:layout_marginTop="16.0dip"
                                    android:layout_marginStart="16.0dip"
                                    android:backgroundTint="?attr/colorPrimary">
                                    <ImageView
                                        android:gravity="center"
                                        android:layout_width="25.0dip"
                                        android:layout_height="25.0dip"
                                        android:layout_marginTop="10.0dip"
                                        android:src="@drawable/ic_upload"
                                        android:tint="?attr/colorIcon"
                                        android:layout_marginStart="10.0dip" />
                                </LinearLayout>
                                <RelativeLayout
                                    android:gravity="center"
                                    android:layout_gravity="center"
                                    android:paddingTop="10.0dip"
                                    android:paddingBottom="10.0dip"
                                    android:layout_width="wrap_content"
                                    android:layout_height="fill_parent"
                                    android:layout_weight="1.0"
                                    android:layout_marginStart="16.0dip"
                                    android:layout_marginEnd="10.0dip">
                                    <LinearLayout
                                        android:orientation="vertical"
                                        android:layout_width="fill_parent"
                                        android:layout_height="wrap_content">
                                        <TextView
                                            android:textAppearance="@style/TextAppearance.M3.Sys.Typescale.TitleMedium"
                                            android:textSize="17.0sp"
                                            android:textColor="?attr/colorOnSurface"
                                            android:ellipsize="end"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Upload"
                                            android:singleLine="false" />
                                        <TextView
                                            android:textAppearance="@style/TextAppearance.M3.Sys.Typescale.TitleSmall"
                                            android:textSize="14.0sp"
                                            android:textColor="?attr/colorOnSurfaceVariant"
                                            android:ellipsize="end"
                                            android:id="@+id/textUpload"
                                            android:paddingTop="0.0dip"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Mbps"
                                            android:singleLine="false" />
                                    </LinearLayout>
                                </RelativeLayout>
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <Button
                android:textAppearance="@style/TextAppearance.M3.Sys.Typescale.TitleMedium"
                android:textSize="16.0sp"
                android:textColor="?android:textColorPrimaryInverse"
                android:id="@+id/startButton"
                android:background="@drawable/uwu_bg_button"
                android:paddingLeft="24.0dip"
                android:paddingTop="12.0dip"
                android:paddingRight="24.0dip"
                android:paddingBottom="12.0dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8.0dip"
                android:layout_marginBottom="16.0dip"
                android:text="@string/start"
                android:layout_marginStart="16.0dip"
                android:layout_marginEnd="16.0dip"
                android:backgroundTint="?attr/colorPrimary"
                android:paddingHorizontal="24.0dip"
                android:paddingVertical="12.0dip"
                style="@style/Widget.AppCompat.Button.Colored" />
            <Button
                android:textAppearance="@style/TextAppearance.M3.Sys.Typescale.TitleMedium"
                android:textSize="16.0sp"
                android:textColor="?android:textColorPrimaryInverse"
                android:id="@+id/stopButton"
                android:background="@drawable/uwu_bg_button"
                android:paddingLeft="24.0dip"
                android:paddingTop="12.0dip"
                android:paddingRight="24.0dip"
                android:paddingBottom="12.0dip"
                android:visibility="gone"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8.0dip"
                android:layout_marginBottom="16.0dip"
                android:text="@string/stop"
                android:layout_marginStart="16.0dip"
                android:layout_marginEnd="16.0dip"
                android:backgroundTint="?attr/colorPrimary"
                android:paddingHorizontal="24.0dip"
                android:paddingVertical="12.0dip"
                style="@style/Widget.AppCompat.Button.Colored" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>