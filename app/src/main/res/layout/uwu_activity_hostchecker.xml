<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    android:id="@+id/coordinator"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <include
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            layout="@layout/layout_appbar" />
        <androidx.core.widget.NestedScrollView
            android:id="@+id/main_layout"
            android:paddingBottom="64.0dip"
            android:clipToPadding="false"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16.0dip"
                    android:layout_marginBottom="8.0dip"
                    android:layout_marginStart="16.0dip"
                    android:layout_marginEnd="16.0dip"
                    app:cardBackgroundColor="?colorCard"
                    app:cardCornerRadius="14.0dip"
                    app:cardElevation="0.0dip">
                    <LinearLayout
                        android:orientation="vertical"
                        android:padding="16.0dip"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">
                        <com.google.android.material.textfield.TextInputLayout
                            android:textAppearance="@style/TextAppearance.M3.Sys.Typescale.TitleMedium"
                            android:id="@+id/inputLayoutMethod"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/hostchecker_method"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
                            <AutoCompleteTextView
                                android:id="@+id/spinnerRequestMethod"
                                android:padding="12.0dip"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:text="GET"
                                android:inputType="none" />
                        </com.google.android.material.textfield.TextInputLayout>
                        <com.google.android.material.textfield.TextInputLayout
                            android:textAppearance="@style/TextAppearance.M3.Sys.Typescale.TitleMedium"
                            android:id="@+id/inputLayoutUrl"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16.0dip"
                            android:hint="@string/hostchecker_hint_url"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/editTextUrl"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:text="google.com"
                                android:inputType="textUri" />
                        </com.google.android.material.textfield.TextInputLayout>
                        <com.google.android.material.textfield.TextInputLayout
                            android:textAppearance="@style/TextAppearance.M3.Sys.Typescale.TitleMedium"
                            android:id="@+id/inputLayoutProxy"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16.0dip"
                            android:hint="@string/hostchecker_hint_ip"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/editTextProxy"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:inputType="text" />
                        </com.google.android.material.textfield.TextInputLayout>
                        <com.google.android.material.textfield.TextInputLayout
                            android:textAppearance="@style/TextAppearance.M3.Sys.Typescale.TitleMedium"
                            android:id="@+id/inputLayoutMode"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16.0dip"
                            android:hint="@string/hostchecker_mode"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
                            <AutoCompleteTextView
                                android:id="@+id/spinnerRequestType"
                                android:padding="12.0dip"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:text="Direct"
                                android:inputType="none" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8.0dip"
                    android:layout_marginBottom="8.0dip"
                    android:layout_marginStart="16.0dip"
                    android:layout_marginEnd="16.0dip">
                    <Button
                        android:textAppearance="@style/TextAppearance.M3.Sys.Typescale.TitleMedium"
                        android:textColor="?android:textColorPrimaryInverse"
                        android:id="@+id/buttonSearch"
                        android:background="@drawable/uwu_bg_button"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/hostchecker_check"
                        style="@style/Widget.AppCompat.Button.Colored" />
                </LinearLayout>
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8.0dip"
                    android:layout_marginBottom="16.0dip"
                    android:layout_marginStart="16.0dip"
                    android:layout_marginEnd="16.0dip"
                    app:cardBackgroundColor="?colorCard"
                    app:cardCornerRadius="14.0dip"
                    app:cardElevation="0.0dip">
                    <LinearLayout
                        android:orientation="vertical"
                        android:padding="16.0dip"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8.0dip"
                            android:text="@string/hostchecker_output"
                            android:textAppearance="@style/TextAppearance.M3.Sys.Typescale.TitleMedium"
                            android:textColor="?attr/colorOnSurface"
                            android:textSize="17sp" />
                        <com.neko.ip.hostchecker.NestedListView
                            android:id="@+id/listLogs"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:divider="@null"
                            android:dividerHeight="0.0dip" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>