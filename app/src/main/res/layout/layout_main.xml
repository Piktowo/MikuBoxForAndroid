<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    android:id="@+id/coordinator"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:id="@+id/fragment_holder"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />
        <com.google.android.material.progressindicator.CircularProgressIndicator
            android:id="@+id/fabProgress"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:max="1"
            app:indicatorColor="?attr/colorSecondary"
            app:layout_anchor="@+id/fab"
            app:layout_anchorGravity="center"
            app:layout_behavior="io.nekohasekai.sagernet.widget.FabProgressBehavior"
            app:trackCornerRadius="@dimen/mtrl_progress_track_thickness"
            app:trackThickness="8.0dip" />
        <io.nekohasekai.sagernet.widget.ServiceButton
            android:id="@+id/fab"
            android:nextFocusDown="@+id/stats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:backgroundTint="?attr/colorPrimary"
            app:elevation="0.0dip"
            app:layout_anchor="@+id/stats"
            app:pressedTranslationZ="6.0dip"
            app:srcCompat="@drawable/ic_service_idle"
            app:tint="?android:textColorPrimaryInverse"
            style="?attr/floatingActionButtonStyle" />
        <io.nekohasekai.sagernet.widget.StatsBar
            android:layout_gravity="bottom"
            android:id="@+id/stats"
            android:fitsSystemWindows="true"
            android:nextFocusUp="@+id/fab"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            app:backgroundTint="?attr/colorPrimary"
            app:contentInsetStart="0.0dip"
            app:elevation="0.0dip"
            app:hideOnScroll="true"
            app:layout_scrollFlags="enterAlways|scroll"
            style="?attr/bottomAppBarStyle">
            <LinearLayout
                android:orientation="vertical"
                android:background="?android:selectableItemBackground"
                android:padding="16.0dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textAppearance="@style/TextAppearance.M3.Sys.Typescale.TitleSmall"
                    android:textSize="14.0sp"
                    android:textColor="?android:textColorPrimaryInverse"
                    android:ellipsize="marquee"
                    android:layout_gravity="fill_horizontal"
                    android:id="@+id/tx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:layout_columnWeight="1.0" />
                <TextView
                    android:textAppearance="@style/TextAppearance.M3.Sys.Typescale.TitleSmall"
                    android:textSize="14.0sp"
                    android:textColor="?android:textColorPrimaryInverse"
                    android:ellipsize="marquee"
                    android:layout_gravity="fill_horizontal"
                    android:id="@+id/rx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:layout_columnWeight="1.0" />
                <com.neko.marquee.text.AutoMarqueeTextView
                    android:textAppearance="@style/TextAppearance.M3.Sys.Typescale.TitleSmall"
                    android:textSize="14.0sp"
                    android:textColor="?android:textColorPrimaryInverse"
                    android:ellipsize="marquee"
                    android:layout_gravity="fill_horizontal"
                    android:id="@+id/ip_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:marqueeRepeatLimit="marquee_forever" />
                <com.neko.marquee.text.AutoMarqueeTextView
                    android:textAppearance="@style/TextAppearance.M3.Sys.Typescale.TitleMedium"
                    android:textSize="17.0sp"
                    android:textColor="?android:textColorPrimaryInverse"
                    android:ellipsize="marquee"
                    android:layout_gravity="fill_horizontal"
                    android:id="@+id/status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:marqueeRepeatLimit="marquee_forever" />
            </LinearLayout>
        </io.nekohasekai.sagernet.widget.StatsBar>
        <com.airbnb.lottie.LottieAnimationView
            android:gravity="bottom"
            android:layout_gravity="bottom"
            android:id="@+id/lottieWelcome"
            android:visibility="gone"
            android:layout_width="fill_parent"
            android:layout_height="150.0dip"
            android:layout_alignParentBottom="true"
            app:layout_anchorGravity="bottom"
            app:lottie_autoPlay="true"
            app:lottie_loop="false"
            app:lottie_rawRes="@raw/uwu_lottie_love" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>