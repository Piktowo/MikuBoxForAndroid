<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@android:color/transparent"
    app:cardCornerRadius="28.0dip"
    app:cardElevation="0.0dip"
    app:strokeWidth="0.0dip"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.card.MaterialCardView
            android:clipToPadding="false"
            android:layout_width="fill_parent"
            android:layout_height="180.0dip"
            android:layout_marginLeft="0.0dip"
            android:layout_marginTop="0.0dip"
            android:layout_marginRight="0.0dip"
            android:layout_marginBottom="0.0dip"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardCornerRadius="5.0dip"
            app:cardElevation="0.0dip">
            <com.neko.blur.BlurImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:src="@drawable/uwu_banner_image_about"
                android:scaleType="centerCrop"
                android:elevation="0.0dip"
                app:blur_radius="2" />
            <View
                android:background="?android:textColorPrimaryInverse"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:alpha="0.2" />
            <View
                android:gravity="center_horizontal"
                android:layout_gravity="center|top"
                android:background="@drawable/uwu_bg_sin"
                android:clickable="false"
                android:layout_width="fill_parent"
                android:layout_height="40.0dip"
                android:layout_marginLeft="75.0dip"
                android:layout_marginTop="-30.0dip"
                android:layout_marginRight="75.0dip"
                android:backgroundTint="?colorSurfaceContainerHigh" />
            <androidx.constraintlayout.widget.ConstraintLayout
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16.0dip"
                android:layout_marginTop="10.0dip"
                android:layout_marginRight="16.0dip"
                android:layout_marginBottom="10.0dip">
                <ImageView
                    android:id="@+id/miku_ui"
                    android:layout_width="wrap_content"
                    android:layout_height="80.0dip"
                    android:layout_marginBottom="0.0dip"
                    android:src="@drawable/uwu_miku_ui"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
                <TextView
                    android:textSize="30.0sp"
                    android:textColor="?colorPrimary"
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MikuBox"
                    android:fontFamily="@font/uwu_font_title"
                    app:layout_constraintStart_toStartOf="@+id/miku_ui"
                    app:layout_constraintTop_toBottomOf="@+id/miku_ui" />
                <TextView
                    android:textSize="30.0sp"
                    android:textColor="?colorOnSurface"
                    android:id="@+id/title2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="for"
                    android:fontFamily="@font/uwu_font_title"
                    app:layout_constraintEnd_toStartOf="@+id/title3"
                    app:layout_constraintStart_toEndOf="@+id/title"
                    app:layout_constraintTop_toBottomOf="@+id/miku_ui" />
                <TextView
                    android:textSize="30.0sp"
                    android:textColor="?colorOnSurface"
                    android:id="@+id/title3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Android"
                    android:fontFamily="@font/uwu_font_title"
                    app:layout_constraintEnd_toEndOf="@+id/miku_ui"
                    app:layout_constraintTop_toBottomOf="@+id/miku_ui" />
                <TextView
                    android:textAppearance="@style/TextAppearance.M3.Sys.Typescale.TitleMedium"
                    android:textSize="17.0sp"
                    android:textColor="?colorOnSurface"
                    android:id="@+id/summary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Modified"
                    android:fontFamily="@font/uwu_font_summary"
                    app:layout_constraintHorizontal_chainStyle="spread"
                    app:layout_constraintStart_toStartOf="@+id/title"
                    app:layout_constraintTop_toBottomOf="@+id/title" />
                <TextView
                    android:textAppearance="@style/TextAppearance.M3.Sys.Typescale.TitleMedium"
                    android:textSize="17.0sp"
                    android:textColor="?colorOnSurface"
                    android:id="@+id/summary2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="from"
                    android:fontFamily="@font/uwu_font_summary"
                    app:layout_constraintEnd_toStartOf="@+id/summary3"
                    app:layout_constraintStart_toEndOf="@+id/summary"
                    app:layout_constraintTop_toBottomOf="@+id/title2" />
                <TextView
                    android:textAppearance="@style/TextAppearance.M3.Sys.Typescale.TitleMedium"
                    android:textSize="17.0sp"
                    android:textColor="?colorPrimary"
                    android:id="@+id/summary3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NekoBox"
                    android:fontFamily="@font/uwu_font_summary"
                    app:layout_constraintEnd_toEndOf="@+id/title3"
                    app:layout_constraintTop_toBottomOf="@+id/title3" />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <View
                android:gravity="center_horizontal"
                android:layout_gravity="bottom|center"
                android:background="@drawable/uwu_bg_sin"
                android:clickable="false"
                android:layout_width="fill_parent"
                android:layout_height="40.0dip"
                android:layout_marginLeft="75.0dip"
                android:layout_marginRight="75.0dip"
                android:layout_marginBottom="-30.0dip"
                android:backgroundTint="?colorSurfaceContainerHigh" />
        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0.0dip"
            android:layout_marginTop="4.0dip"
            android:layout_marginRight="0.0dip"
            android:layout_marginBottom="0.0dip"
            app:cardBackgroundColor="?colorSecondaryContainer"
            app:cardCornerRadius="5.0dip"
            app:cardElevation="0.0dip">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:gravity="center_vertical"
                    android:clipToPadding="false"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16.0dip"
                        android:layout_marginBottom="16.0dip"
                        android:layout_marginStart="16.0dip"
                        android:layout_marginEnd="8.0dip">
                        <com.neko.widget.ProfileBannerImageView
                            android:layout_width="50.0dip"
                            android:layout_height="50.0dip"
                            android:src="@drawable/uwu_banner_profile"
                            app:siBorderColor="?colorPrimary"
                            app:siBorderWidth="3.0dip" />
                    </LinearLayout>
                    <RelativeLayout
                        android:paddingTop="16.0dip"
                        android:paddingBottom="16.0dip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:layout_marginStart="8.0dip"
                        android:layout_marginEnd="5.0dip">
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content">
                            <com.neko.marquee.text.UserNameTextView
                                android:textAppearance="@style/TextAppearance.M3.Sys.Typescale.TitleMedium"
                                android:textSize="17.0sp"
                                android:textColor="?colorOnSecondaryContainer"
                                android:ellipsize="marquee"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:singleLine="true"
                                android:marqueeRepeatLimit="marquee_forever" />
                            <com.neko.marquee.text.RandomText
                                android:textAppearance="@style/TextAppearance.M3.Sys.Typescale.TitleMedium"
                                android:textSize="14.0sp"
                                android:textColor="?colorOnSecondaryContainer"
                                android:ellipsize="marquee"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:singleLine="true"
                                android:marqueeRepeatLimit="marquee_forever"
                                uwu_runnable="true" />
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>