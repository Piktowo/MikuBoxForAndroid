<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16.0dip"
    android:layout_marginTop="16.0dip"
    android:layout_marginEnd="16.0dip"
    android:layout_marginBottom="0.0dip"
    android:clickable="true"
    android:focusable="true"
    app:cardBackgroundColor="?colorCard"
    app:cardCornerRadius="14.0dip"
    app:cardElevation="0.0dip">

    <LinearLayout
        android:id="@+id/selected_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/uwu_selected_view"
        android:visibility="invisible" />

    <LinearLayout
        android:id="@+id/content_lin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:orientation="horizontal">

        <com.neko.widget.LayoutOff
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            key="uwu_icon_profile_server">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10.0dip"
                android:layout_marginEnd="5.0dip">

                <com.neko.widget.DynamicShapeImageView
                    android:layout_width="45.0dip"
                    android:layout_height="45.0dip"
                    android:scaleType="centerCrop" />

                <androidx.preference.internal.PreferenceImageView
                    android:layout_width="25.0dip"
                    android:layout_height="25.0dip"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_social_emoji_symbols"
                    android:tint="?colorIcon" />
            </FrameLayout>
        </com.neko.widget.LayoutOff>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:nextFocusRight="@+id/edit"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1.0"
                    android:gravity="center_vertical"
                    android:paddingStart="12.0dip"
                    android:paddingTop="8.0dip"
                    android:paddingBottom="8.0dip">

                    <TextView
                        android:id="@+id/profile_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.M3.Sys.Typescale.TitleMedium"
                        android:textColor="?colorOnSurface"
                        android:textSize="17.0sp" />
                </LinearLayout>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:background="?selectableItemBackgroundBorderless"
                    android:contentDescription="@string/edit"
                    android:focusable="true"
                    android:padding="12.0dip"
                    app:srcCompat="@drawable/ic_image_edit"
                    app:tint="?colorOnSurface" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:background="?selectableItemBackgroundBorderless"
                    android:contentDescription="@string/share"
                    android:focusable="true"
                    android:padding="12.0dip"
                    app:srcCompat="@drawable/ic_social_share"
                    app:tint="?colorOnSurface" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/remove"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:background="?selectableItemBackgroundBorderless"
                    android:contentDescription="@string/delete"
                    android:focusable="true"
                    android:padding="12.0dip"
                    app:srcCompat="@drawable/ic_action_delete"
                    app:tint="?colorOnSurface" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="12.0dip"
                android:paddingEnd="8.0dip"
                android:paddingBottom="4.0dip"
                android:visibility="gone">

                <TextView
                    android:id="@+id/profile_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/server_address"
                    android:textAppearance="@style/TextAppearance.M3.Sys.Typescale.TitleMedium"
                    android:textColor="?colorOnSurfaceVariant"
                    android:textSize="14.0sp" />

                <View
                    android:layout_width="0.0dip"
                    android:layout_height="0.0dip"
                    android:layout_weight="1.0" />

                <TextView
                    android:id="@+id/traffic_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/traffic"
                    android:textAppearance="@style/TextAppearance.M3.Sys.Typescale.TitleSmall"
                    android:textColor="?colorOnSurfaceVariant"
                    android:textSize="12.0sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="12.0dip"
                android:paddingEnd="8.0dip"
                android:paddingBottom="12.0dip">

                <TextView
                    android:id="@+id/profile_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.M3.Sys.Typescale.TitleSmall"
                    android:textColor="?colorPrimary"
                    android:textSize="12.0sp" />

                <View
                    android:layout_width="0.0dip"
                    android:layout_height="0.0dip"
                    android:layout_weight="1.0" />

                <TextView
                    android:id="@+id/profile_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4.0dip"
                    android:textAppearance="@style/TextAppearance.M3.Sys.Typescale.TitleSmall"
                    android:textColor="?colorPrimary"
                    android:textSize="12.0sp" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
