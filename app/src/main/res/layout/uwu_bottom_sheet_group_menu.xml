<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:background="@drawable/uwu_background_bottom_sheet"
    android:paddingTop="0.0dip"
    android:paddingBottom="?attr/dialogPreferredPadding"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginStart="0.0dip"
        android:layout_marginEnd="0.0dip">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.card.MaterialCardView
                android:clipToPadding="false"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16.0dip"
                android:layout_marginBottom="8.0dip"
                android:layout_marginStart="16.0dip"
                android:layout_marginEnd="16.0dip"
                app:cardBackgroundColor="?attr/colorCard"
                app:cardCornerRadius="28.0dip"
                app:cardElevation="0.0dip">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                    <com.neko.elasticview.ElasticView
                        android:layout_width="fill_parent"
                        android:layout_height="150.0dip"
                        android:layout_marginTop="12.0dip"
                        android:layout_marginBottom="12.0dip"
                        android:layout_marginStart="12.0dip"
                        android:layout_marginEnd="12.0dip"
                        app:cardBackgroundColor="#00000000"
                        app:cardCornerRadius="19.0dip"
                        app:cardElevation="0.0dip"
                        app:rippleColor="#00000000">
                        <ImageView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:src="@drawable/uwu_banner_image_about"
                            android:scaleType="centerCrop"
                            android:elevation="0.0dip" />
                        <View
                            android:background="@android:color/black"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:alpha="0.2" />
                        <com.neko.particlesdrawable.ParticlesView
                            android:background="#00000000"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_centerInParent="true"
                            app:dotColor="?attr/colorPrimary"
                            app:frameDelayMillis="10"
                            app:lineColor="?attr/colorPrimary"
                            app:lineDistance="86.0dip"
                            app:lineThickness="1.0dip"
                            app:maxDotRadius="4.0dip"
                            app:minDotRadius="1.0dip"
                            app:numDots="60"
                            app:stepMultiplier="1.0" />
                        <LinearLayout
                            android:gravity="bottom"
                            android:layout_gravity="bottom"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:gravity="center_vertical"
                                android:clipToPadding="false"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content">
                                <LinearLayout
                                    android:gravity="center"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="16.0dip"
                                    android:layout_marginBottom="16.0dip"
                                    android:layout_marginStart="16.0dip"
                                    android:layout_marginEnd="5.0dip">
                                    <com.neko.widget.ProfileBannerImageView
                                        android:layout_width="60.0dip"
                                        android:layout_height="60.0dip"
                                        android:src="@drawable/uwu_banner_profile"
                                        app:siBorderColor="@android:color/white"
                                        app:siBorderWidth="3.0dip" />
                                </LinearLayout>
                                <RelativeLayout
                                    android:paddingTop="16.0dip"
                                    android:paddingBottom="16.0dip"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1.0"
                                    android:layout_marginStart="5.0dip"
                                    android:layout_marginEnd="5.0dip">
                                    <LinearLayout
                                        android:orientation="vertical"
                                        android:layout_width="fill_parent"
                                        android:layout_height="wrap_content">
                                        <com.neko.marquee.text.UserNameTextView
                                            android:textAppearance="@style/TextAppearance.M3.Sys.Typescale.TitleMedium"
                                            android:textSize="17.0sp"
                                            android:textColor="@android:color/white"
                                            android:ellipsize="marquee"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:marqueeRepeatLimit="marquee_forever"
                                            android:singleLine="true" />
                                        <com.neko.marquee.text.RandomText
                                            android:textAppearance="@style/TextAppearance.M3.Sys.Typescale.TitleMedium"
                                            android:textSize="14.0sp"
                                            android:textColor="@android:color/white"
                                            android:ellipsize="marquee"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:singleLine="true"
                                            android:marqueeRepeatLimit="marquee_forever"
                                            uwu_runnable="false" />
                                    </LinearLayout>
                                </RelativeLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </com.neko.elasticview.ElasticView>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <LinearLayout
                android:gravity="center_vertical"
                android:id="@+id/action_new_group"
                android:background="@drawable/uwu_bg_top"
                android:focusable="true"
                android:clickable="true"
                android:clipToPadding="false"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8.0dip"
                android:layout_marginBottom="4.0dip"
                android:baselineAligned="false"
                android:minHeight="?android:listPreferredItemHeightSmall"
                android:layout_marginStart="16.0dip"
                android:layout_marginEnd="16.0dip"
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto">
                <LinearLayout
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16.0dip"
                    android:layout_marginBottom="16.0dip"
                    android:layout_marginStart="8.0dip"
                    android:layout_marginEnd="8.0dip">
                    <LinearLayout
                        android:background="@drawable/uwu_bg_icon"
                        android:layout_width="45.0dip"
                        android:layout_height="45.0dip"
                        android:layout_marginStart="8.0dip"
                        android:backgroundTint="?attr/colorPrimary">
                        <ImageView
                            android:gravity="center"
                            android:layout_width="25.0dip"
                            android:layout_height="25.0dip"
                            android:layout_marginTop="10.0dip"
                            android:src="@drawable/ic_av_playlist_add"
                            android:tint="?attr/colorIcon"
                            android:layout_marginStart="10.0dip" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20.0dip"
                    android:layout_marginBottom="20.0dip"
                    android:layout_weight="1.0"
                    android:layout_marginStart="8.0dip"
                    android:layout_marginEnd="16.0dip">
                    <TextView
                        android:textAppearance="@style/TextAppearance.M3.Sys.Typescale.TitleMedium"
                        android:textSize="17.0sp"
                        android:textColor="?attr/colorOnSurface"
                        android:ellipsize="marquee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/group_create"
                        android:singleLine="false" />
                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16.0dip"
                    android:layout_marginBottom="16.0dip"
                    android:layout_marginStart="8.0dip"
                    android:layout_marginEnd="16.0dip">
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="28.0dip"
                        android:layout_height="28.0dip"
                        app:cardBackgroundColor="?attr/colorSurfaceContainerHighest"
                        app:cardCornerRadius="99.0dip"
                        app:cardElevation="0.0dip"
                        app:strokeWidth="0.0dip">
                        <ImageView
                            android:layout_width="25.0dip"
                            android:layout_height="25.0dip"
                            android:layout_marginTop="1.0dip"
                            android:src="@drawable/uwu_arrow"
                            android:tint="?attr/colorOnSurfaceVariant"
                            android:layout_marginStart="2.0dip" />
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:gravity="center_vertical"
                android:id="@+id/action_update_all"
                android:background="@drawable/uwu_bg_bot"
                android:focusable="true"
                android:clickable="true"
                android:clipToPadding="false"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0.0dip"
                android:layout_marginBottom="16.0dip"
                android:baselineAligned="false"
                android:minHeight="?android:listPreferredItemHeightSmall"
                android:layout_marginStart="16.0dip"
                android:layout_marginEnd="16.0dip"
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto">
                <LinearLayout
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16.0dip"
                    android:layout_marginBottom="16.0dip"
                    android:layout_marginStart="8.0dip"
                    android:layout_marginEnd="8.0dip">
                    <LinearLayout
                        android:background="@drawable/uwu_bg_icon"
                        android:layout_width="45.0dip"
                        android:layout_height="45.0dip"
                        android:layout_marginStart="8.0dip"
                        android:backgroundTint="?attr/colorPrimary">
                        <ImageView
                            android:gravity="center"
                            android:layout_width="25.0dip"
                            android:layout_height="25.0dip"
                            android:layout_marginTop="10.0dip"
                            android:src="@drawable/ic_baseline_update_24"
                            android:tint="?attr/colorIcon"
                            android:layout_marginStart="10.0dip" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20.0dip"
                    android:layout_marginBottom="20.0dip"
                    android:layout_weight="1.0"
                    android:layout_marginStart="8.0dip"
                    android:layout_marginEnd="16.0dip">
                    <TextView
                        android:textAppearance="@style/TextAppearance.M3.Sys.Typescale.TitleMedium"
                        android:textSize="17.0sp"
                        android:textColor="?attr/colorOnSurface"
                        android:ellipsize="marquee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/update_all_subscription"
                        android:singleLine="false" />
                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16.0dip"
                    android:layout_marginBottom="16.0dip"
                    android:layout_marginStart="8.0dip"
                    android:layout_marginEnd="16.0dip">
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="28.0dip"
                        android:layout_height="28.0dip"
                        app:cardBackgroundColor="?attr/colorSurfaceContainerHighest"
                        app:cardCornerRadius="99.0dip"
                        app:cardElevation="0.0dip"
                        app:strokeWidth="0.0dip">
                        <ImageView
                            android:layout_width="25.0dip"
                            android:layout_height="25.0dip"
                            android:layout_marginTop="1.0dip"
                            android:src="@drawable/uwu_arrow"
                            android:tint="?attr/colorOnSurfaceVariant"
                            android:layout_marginStart="2.0dip" />
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>