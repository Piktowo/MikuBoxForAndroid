<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <attr name="mal_toolbarTheme" format="reference"/>
    <attr name="mal_toolbarPopupTheme" format="reference"/>
    
    <attr name="mal_color_primary" format="reference|color" />
    <attr name="mal_color_secondary" format="reference|color" />
    <attr name="mal_card_background" format="reference|color" />

    <attr name="colorBg" format="color" />
    <attr name="colorIcon" format="color" />
    <attr name="colorCard" format="color" />
    
    <attr name="colorMaterial100" format="color" />
    <attr name="colorMaterial300" format="color" />
    <attr name="accentOrTextSecondary" format="color" />
    <attr name="accentOrTextPrimary" format="color" />
    <attr name="primaryOrTextSecondary" format="color" />
    <attr name="primaryOrTextPrimary" format="color" />
    <attr name="fabColorBackground" format="color" />
    <attr name="selectedColorPrimary" format="color" />
    <attr name="whiteOrTextPrimary" format="color" />
    
    <attr name="siArrowPosition">
        <enum name="left" value="0" />
        <enum name="right" value="1" />
    </attr>
    <attr name="siBorderType">
        <enum name="stroke" value="0" />
        <enum name="fill" value="1" />
    </attr>
    <attr name="siStrokeCap">
        <enum name="butt" value="0" />
        <enum name="round" value="1" />
        <enum name="square" value="2" />
    </attr>
    <attr name="siStrokeJoin">
        <enum name="bevel" value="0" />
        <enum name="miter" value="1" />
        <enum name="round" value="2" />
    </attr>
    <declare-styleable name="ShaderImageView">
        <attr name="siSquare" format="boolean" />
        <attr name="siBorderColor" format="color" />
        <attr name="siBorderWidth" format="dimension" />
        <attr name="siBorderAlpha" format="float" />
        <attr name="siForeground" format="integer|reference" />
        <attr name="siRadius" format="dimension" />
        <attr name="siArrowPosition"/>
        <attr name="siTriangleHeight" format="dimension"/>
        <attr name="siShape" format="integer|reference" />
        <attr name="siBorderType"/>
        <attr name="siStrokeCap"/>
        <attr name="siStrokeJoin"/>
        <attr name="siStrokeMiter" format="dimension" />
    </declare-styleable>
    
    <declare-styleable name="ElasticView">
        <attr name="flexibility" format="float" />
    </declare-styleable>

    <declare-styleable name="SwitchButton">
        <attr name="uwuThumbDrawable" format="reference"/>
        <attr name="uwuThumbColor" format="color|reference"/>
        <attr name="uwuThumbMargin" format="dimension|reference"/>
        <attr name="uwuThumbMarginTop" format="dimension|reference"/>
        <attr name="uwuThumbMarginBottom" format="dimension|reference"/>
        <attr name="uwuThumbMarginLeft" format="dimension|reference"/>
        <attr name="uwuThumbMarginRight" format="dimension|reference"/>
        <attr name="uwuThumbWidth" format="dimension|reference"/>
        <attr name="uwuThumbHeight" format="dimension|reference"/>
        <attr name="uwuThumbRadius" format="dimension|reference"/>
        <attr name="uwuBackRadius" format="dimension|reference"/>
        <attr name="uwuBackDrawable" format="reference"/>
        <attr name="uwuBackColor" format="color|reference"/>
        <attr name="uwuFadeBack" format="boolean"/>
        <attr name="uwuThumbRangeRatio" format="float"/>
        <attr name="uwuAnimationDuration" format="integer"/>
        <attr name="uwuTintColor" format="color|reference"/>
        <attr name="uwuTextOn" format="string"/>
        <attr name="uwuTextOff" format="string"/>
        <attr name="uwuTextThumbInset" format="dimension"/>
        <attr name="uwuTextExtra" format="dimension"/>
        <attr name="uwuTextAdjust" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="ExpandableView">
        <attr name="el_duration" format="integer" />
        <attr name="el_expanded" format="boolean" />
        <attr name="el_parallax" format="float" />
        <attr name="el_orientation" format="enum">
            <enum name="horizontal" value="0" />
            <enum name="vertical" value="1" />
        </attr>
    </declare-styleable>

    <declare-styleable name="CircleImageView">
        <attr name="civ_border_width" format="dimension" />
        <attr name="civ_border_color" format="color" />
        <attr name="civ_border_overlay" format="boolean" />
        <attr name="civ_circle_background_color" format="color" />
    </declare-styleable>

    <declare-styleable name="ParticlesView">
        <attr
            name="minDotRadius"
            format="dimension" />
        <attr
            name="maxDotRadius"
            format="dimension" />
        <attr
            name="lineThickness"
            format="dimension" />
        <attr
            name="lineDistance"
            format="dimension" />
        <attr
            name="numDots"
            format="integer" />
        <attr
            name="dotColor"
            format="color" />
        <attr
            name="lineColor"
            format="color" />
        <attr
            name="frameDelayMillis"
            format="integer" />
        <attr
            name="stepMultiplier"
            format="float" />
    </declare-styleable>
    
    <declare-styleable name="BlurImageView">
        <attr name="blur_radius" format="integer" />
    </declare-styleable>

</resources>
